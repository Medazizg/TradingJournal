rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORARY DEVELOPMENT RULES - OPEN ACCESS
    // ⚠️ WARNING: These rules allow all authenticated users to read/write all data
    // Only use for development/testing!
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
