rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORARY DEVELOPMENT RULES - SIMPLIFIED FOR IMMEDIATE FIX
    // ⚠️ These rules allow authenticated users to access their own data
    
    // All collections - simple authentication check
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
